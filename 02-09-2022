int main()
{
	int i, j ,a[100],sum=0;
	char f;
	printf("students:");
	scanf("%d",&j);
	printf("\nmarks:");
	for(i=0;i<j;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("\ngender:");
	scanf("%ch",&f);
	for(i=0;i<j;i++)
	{ 
	   if(f=='b')
	   {
	   
	   
	     	if(a[i]%2==0)
	     	sum=sum+a[i];
	   }
	   else
	   {
	   	   if(a[i]%2!=0)
	   	  sum=sum+a[i];
	   }

	}
	printf("%d",sum);
	return 0;
}
Output:
students:5

marks: 4 7 9 3 7
gender: b
4
